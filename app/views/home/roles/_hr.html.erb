
<style>
    .text {
        font-family: raleway;
        font-size: 40px;
        position: absolute center;
        text-align: center;
        padding-left: 0%;
        color: #000;
        margin-top: 43px;
    }

    .text1 {
        font-family: raleway;
        font-size: 21px;
        text-align: center;
        margin-top: -20px;
        color: #000;
    }

    .image {
        text-align: center;
        width: 200px;
        /* Container's dimensions */

        height: 200px;
        -webkit-border-radius: 75%;
        -moz-border-radius: 75%;
        box-shadow: 0 0 0 1px #eee;
        background: url("https://bootdey.com/img/Content/avatar/avatar7.png") center center no-repeat;
        background-size: cover;
        margin: auto;
        margin-top: 20px;
        margin-bottom: -30px;
        align-content: center;
    }



    .trick {
        display: inline-block;
        vertical-align: middle;
        height: 150px;
    }

    .image:hover {
        box-shadow: 0px 5px 20px .9px #3F3F3F;
    }

    .image:hover {
        -webkit-transform: scale(1.12);
        transform: scale(1.12);
        -webkit-transition: 1.6s ease-in-out;
        transition: 1.6s ease-in-out;
    }



    .trick:hover img {
        -webkit-transform: scale(1);
        transform: scale(1);
    }

    #overlay {
        -webkit-border-radius: 50%;
        -moz-border-radius: 50%;
        padding: 0 0 0 0;
        opacity: 1.0;
        -webkit-transition: opacity 2.25s ease;
        -moz-transition: opacity 10.25s ease;
    }

    #box:hover #overlay {
        opacity: 1;
    }





</style>


<div class="box">
  <div id="overlay">
    <div class="image">
      <div class="trick">

      </div>
    </div>
    <ul class="text"><%= current_user.first_name %> <%= current_user.last_name %></ul>
    <div class="text1"><%= current_user.role %></div>

  </div>





<div>
<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">

  <li class="nav-item" role="presentation">
    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Managers</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Employees</a>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">

  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">






    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
      <tr>

        <th>Name</th>
        <th>Cnic</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Role</th>
        <th>Joining Date</th>


      </tr>
      </thead>

      <tbody>

      <% @users.each do |manager| %>

        <tr>
          <% if manager.role == "Manager" %>
            <td><%= manager.first_name %>
              <%= manager.last_name %></td>

            <td>  <%= manager.cnic %></td>
            <td><%= manager.email %><br></td>
            <td> <%= manager.phone_number %></td>
            <td><%= manager.role %></td>
            <td><%= manager.joining_date %></td>




          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>






  </div>
  <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">







    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
      <tr>

        <th>Name</th>
        <th>Cnic</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Role</th>
        <th>Joining Date</th>
        <th>Manager Assigned</th>
        <th>Form Status</th>
        <th>Give Remark</th>
        <th></th>

      </tr>
      </thead>

      <tbody>

      <% @users.each do |employee| %>



        <tr>
          <% if employee.role == "Employee" %>

            <td><%= employee.first_name %>
              <%= employee.last_name %>
            </td>

            <td>  <%= employee.cnic %></td>
            <td><%= employee.email %><br></td>
            <td> <%= employee.phone_number %></td>
            <td><%= employee.role %></td>
            <td><%= employee.joining_date %></td>

              <% managers = User.find(employee.assigned_manager) %>
            <td><%= managers.first_name  %> <%= managers.last_name  %></td>

            <% if  employee.survey_forms.any? %>
              <% @abc =  employee.survey_forms[0].id %>
              <% @name = employee %>
              <td><%= link_to 'Submitted Form',  survey_form_path(id: @abc) %></td>

            <% else %>
              <td><%= link_to 'Form Not Submiited'%></td>



            <%end%>



            <% if employee.survey_forms.count >= 3 %>
              <td><%= link_to 'Remarks Submitted' %></td>



            <% elsif employee.survey_forms.any? && employee.survey_forms.count > 1 %> %>
              <% @abc =  employee.survey_forms[1].id %>
              <% @name = employee %>
              <td><%= link_to 'Give Remark',  new_survey_path(id:@abc)%></td>
                <% else  %>
              <td><%= link_to 'Form Not Submiited'%></td>



            <%end%>
            <td><%= link_to "Edit Employee" , edit_home_path(employee.id) %></td>


          <% end %>


        </tr>
        <% end %>

      </tbody>

    </table>








  </div>
</div>

























