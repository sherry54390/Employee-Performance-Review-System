
<html>




<div>
<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">

  <li class="nav-item" role="presentation">
    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Managers</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Employees</a>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">

  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">






    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
      <tr>

        <th>Name</th>
        <th>Cnic</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Role</th>
        <th>Joining Date</th>


      </tr>
      </thead>

      <tbody>

      <% @users.each do |manager| %>

        <tr>
          <% if manager.role == "Manager" %>
            <td><%= manager.first_name %>
              <%= manager.last_name %></td>

            <td>  <%= manager.cnic %></td>
            <td><%= manager.email %><br></td>
            <td> <%= manager.phone_number %></td>
            <td><%= manager.role %></td>
            <td><%= manager.joining_date %></td>




          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>






  </div>
  <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">







    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
      <tr>

        <th>Name</th>
        <th>Cnic</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Role</th>
        <th>Joining Date</th>
        <th>Manager Assigned</th>
        <th>Form Status</th>
        <th>Give Remark</th>

      </tr>
      </thead>

      <tbody>

      <% @users.each do |employee| %>



        <tr>
          <% if employee.role == "Employee" %>

            <td><%= employee.first_name %>
              <%= employee.last_name %>
            </td>

            <td>  <%= employee.cnic %></td>
            <td><%= employee.email %><br></td>
            <td> <%= employee.phone_number %></td>
            <td><%= employee.role %></td>
            <td><%= employee.joining_date %></td>

            <td><%= employee.assigned_manager %></td>

            <% if  employee.survey_forms.any? %>
              <% @abc =  employee.survey_forms[0].id %>
              <% @name = employee %>
              <td><%= link_to 'Submitted Form',  survey_form_path(id: @abc) %></td>

            <% else %>
              <td><%= link_to 'Form Not Submiited'%></td>



            <%end%>



            <% if  employee.survey_forms.any? && employee.survey_forms.count > 1 %>
              <% @abc =  employee.survey_forms[1].id %>
              <% @name = employee %>
              <td><%= link_to 'Give Remark',  new_survey_path(id:@abc)%></td>

            <% else %>
              <td><%= link_to 'Form Not Submiited'%></td>



            <%end%>


          <% end %>


        </tr>
        <% end %>

      </tbody>

    </table>








  </div>
</div>

























<%= link_to 'Create Manager' ,sign_up_path ,class: 'btn btn-outline-info' %>


</div>

